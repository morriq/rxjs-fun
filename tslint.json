{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "directive-selector-name": [true, "camelCase"],
    "component-selector-name": [true, "kebab-case"],
    "directive-selector-type": [true, "attribute"],
    "component-selector-type": [true, "element"],
    "directive-selector-prefix": [true, "inv"],
    "component-selector-prefix": [true, "inv"],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-forward-ref": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "pipe-naming": [true, "camelCase", "inv"],
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "member-access": [true, "check-accessor"],
    "member-ordering": [true, "static-before-instance", "public-before-private", "variables-before-functions"],
    "no-internal-module": true,
    "no-namespace": [true, "allow-declarations"],
    "no-reference": true,
    "typedef": [true, "call-signature", "parameter", "property-declaration", "member-variable-declaration"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "space",
        "parameter": "space",
        "property-declaration": "space",
        "variable-declaration": "space"
      }
    ],
    "curly": true,
    "label-position": true,
    "no-arg": true,
    "no-conditional-assignment": true,
    "no-console": [true, "log", "warn", "error"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-for-in-array": false,
    "no-shadowed-variable": true,
    "no-switch-case-fall-through": true,
    "no-unreachable": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-unused-new": true,
    "no-unused-variable": [true, {"ignore-pattern": "^_"}],
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "radix": true,
    "restrict-plus-operands": false,
    "switch-default": true,
    "use-isnan": true,
    "eofline": true,
    "indent": [true, "spaces"],
    "max-file-line-count": [true, 350],
    "max-line-length": [true, 120],
    "no-default-export": true,
    "no-mergeable-namespace": true,
    "no-trailing-whitespace": true,
    "trailing-comma": [true, {
      "multiline": "never",
      "singleline": "never"
    }],
    "align": [true, "parameters", "statements"],
    "class-name": true,
    "interface-name": [true, "always-prefix"],
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-shorthand": true,
    "one-line": [true, "check-catch", "check-else", "check-finally", "check-open-brace", "check-whitespace"],
    "one-variable-per-declaration": true,
    "quotemark": [true, "single", "avoid-escape"],
    "semicolon": [true, "always"],
    "variable-name": [true, "ban-keywords", "check-format"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type"]
  }
}